<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.potenter.instagram.post.comment.dao.CommentDAO">
	<insert id="insertComment" parameterType="map">
		INSERT INTO `comment`
		(
			`postId`
			, `userId`
			, `userName`
			, `comment`
			, `createdAt`
			, `updatedAt`
		)
		VALUE 
		(
			#{postId}
			, #{userId}
			, #{userName}
			, #{comment}
			, now()
			, now()
		)		
	</insert>
	
	<select id="selectComment" parameterType="int" resultType="com.potenter.instagram.post.comment.model.Comment">
		SELECT
			`id`
			, `postId`
			, `userId`
			, `userName`
			, `comment`
			, `createdAt`
			, `updatedAt`
		FROM
			`comment`
		WHERE
			`postId`= #{postId}
	</select>
	
	<delete id="deleteComment" parameterType="int">
		DELETE FROM `comment`
		WHERE
			`postId` = #{postId}	
	</delete>

</mapper>

